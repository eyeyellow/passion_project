<div class="container">
  <h1>Fill out the form below to edit this entry:</h1>
  <form method="POST" action='/entries/<%= @entry.id %>'>
    <input type="hidden" name="_method" value="put">
    <label>Title:</label>
    <input type="text" name="title" value="<%= @entry.title %>">
    <label>Description:</label>
    <textarea rows="10" cols="50" name="description" value="<%= @entry.description %>"><%= @entry.description %></textarea>
    <select name="entry_type_id">
      <% @entry_types.each do |entry_type| %>
      <option value="<%= entry_type.id %>"><%= entry_type.name %></option>
      <% end %>
    </select>
    <input type="submit" value="Submit" class="button">
  </form>
  <a href='/'>Home</a>
</div>